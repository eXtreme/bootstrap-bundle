{% extends "ExBootstrapBundle:Form:form_basic.html.twig" %}

{% block form_start %}
    {%- spaceless %}
        {% set attr = attr|merge({ 'class': (attr.class|default('')~' form-horizontal')|trim }) %}
        {{ parent() }}
    {% endspaceless -%}
{% endblock form_start %}

{% block form_widget %}
    {%- spaceless %}
        {% if compound %}
            {{ block('form_widget_compound') }}
        {% else %}
            {{ block('form_widget_simple') }}
        {% endif %}
    {% endspaceless -%}
{% endblock form_widget %}

{% block form_row %}
    {%- spaceless %}
        {% set width = 12 %}
        {% set label_width = 3 %}
        {% if attr.width is defined %}
            {% set width = attr.width %}
        {% endif %}
        {% if attr.col is defined %}
            {% set label_width = attr.col %}
        {% endif %}
        {% set widget_width = width - label_width %}
        {% set label_attr = label_attr|merge({ 'width': label_width }) %}
        <div class="form-group{% if errors|length > 0 %} has-error{% endif %}">
            {{ form_label(form, label, label_attr) }}
            <div class="col-lg-{{ widget_width }}">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
                {{ block('form_help') }}
            </div>
        </div>
    {% endspaceless -%}
{% endblock %}

{% block form_label %}
    {%- spaceless %}
        {% set label_width = 3 %}
        {% if attr.col is defined %}
            {% set label_width = attr.col %}
        {% endif %}
        {% set label_attr = label_attr|merge({ 'class': (label_attr.class|default('')~' col-lg-'~label_width)|trim }) %}
        {{ parent() }}
    {% endspaceless -%}
{% endblock form_label %}

{% block button_row %}
    {%- spaceless %}
        {% set width = 12 %}
        {% set label_width = 3 %}
        {% if attr.width is defined %}
            {% set width = attr.width %}
        {% endif %}
        {% if attr.col is defined %}
            {% set label_width = attr.col %}
        {% endif %}
        {% set widget_width = width - label_width %}
        <div class="form-group">
            <div class="col-lg-offset-{{ label_width }} col-lg-{{ widget_width }}">
                {{ form_widget(form) }}
            </div>
        </div>
    {% endspaceless -%}
{% endblock button_row %}

